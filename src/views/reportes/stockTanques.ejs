<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Alerta de Stock MÃ­nimo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">ðŸ“¦ Stock de Tanques</h2>

    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Sucursal</th>
          <th>Producto</th>
          <th>Nivel Actual</th>
          <th>Stock MÃ­nimo</th>
          <th>Estado</th>
        </tr>
      </thead>
      <tbody>
        <% if (stocks.length === 0) { %>
          <tr><td colspan="5" class="text-center">No hay registros</td></tr>
        <% } else { %>
          <% stocks.forEach(s => { %>
            <tr>
              <td><%= s.sucursal %></td>
              <td><%= s.producto %></td>
              <td><%= s.nivel_actual %></td>
              <td><%= s.stock_minimo %></td>
              <td>
                <% if (s.estado_stock === 'ALERTA: Bajo stock') { %>
                  <span class="badge bg-danger">Bajo stock</span>
                <% } else { %>
                  <span class="badge bg-success">OK</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>

    <a href="/reportes" class="btn btn-secondary mt-3">â¬… Volver</a>
  </div>
</body>
</html>
