<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Reporte de Comisiones</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">ðŸŽ¯ Comisiones por Mes</h2>

    <!-- FILTRO DE MES -->
    <form action="/reportes/comisiones" method="get" class="row g-3 mb-4">
      <div class="col-md-4">
        <label class="form-label">Mes</label>
        <select name="mes" class="form-select" required>
          <option value="">-- Selecciona --</option>
          <% ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'].forEach(m => { %>
            <option value="<%= m %>" <%= m === mes ? 'selected' : '' %>><%= m %></option>
          <% }); %>
        </select>
      </div>
      <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary w-100">ðŸ”Ž Filtrar</button>
      </div>
    </form>

    <!-- TABLA DE COMISIONES -->
    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Empleado</th>
          <th>Litros Vendidos</th>
          <th>Meta</th>
          <th>BonificaciÃ³n</th>
        </tr>
      </thead>
      <tbody>
        <% if (comisiones.length === 0) { %>
          <tr><td colspan="4" class="text-center">No hay registros para este mes</td></tr>
        <% } %>
        <% comisiones.forEach(row => { %>
          <tr>
            <td><%= row.empleado %></td>
            <td><%= row.total_litros %></td>
            <td><%= row.meta_alcanzada ? 'âœ…' : 'âŒ' %></td>
            <td>Bs. <%= row.total_bonificacion.toFixed(2) %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <a href="/reportes" class="btn btn-secondary mt-3">â¬… Volver</a>
  </div>
</body>
</html>
